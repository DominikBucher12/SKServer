use_frameworks!

target 'SKServer macOS' do
	platform :osx, '10.11'
	pod 'SKCore', '~> 4.1.0'
	pod 'SKWebAPI', '~> 4.1.0'
	pod 'Swifter', :git => 'https://github.com/httpswift/swifter', :branch => 'stable'
end

target 'SKServer iOS' do
	platform :ios, '9.0'
	pod 'SKCore', '~> 4.1.0'
	pod 'SKWebAPI', '~> 4.1.0'
	pod 'Swifter', :git => 'https://github.com/httpswift/swifter', :branch => 'stable'
end

target 'SKServer tvOS' do
	platform :tvos, '9.0'
	pod 'SKCore', '~> 4.1.0'
	pod 'SKWebAPI', '~> 4.1.0'
	pod 'Swifter', :git => 'https://github.com/httpswift/swifter', :branch => 'stable'
end
